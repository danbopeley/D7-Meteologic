<?php
/**
 * @file
 * Meteologic NDBC installation hooks.
 */

/**
 * Implements hook_uninstall().
 */
function meteologic_ndbc_uninstall() {
  $result = db_select('variable', 'v')
    ->fields('v', array('name'))
    ->condition('name', 'meteologic_ndbc_%', '=')
    ->execute();


  foreach ($result as $row) {
    variable_del($row->name);
  }
}