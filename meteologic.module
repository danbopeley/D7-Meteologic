 * please consider visiting the settings page at "admin/config/services/update".
 *
 * @param string
 *   The provider's machine name.
 * @return boolean
 *   Whether the update was successful or not.
 */
function _meteologic_update_forecast($provider) {
  // @TODO write this function.
  watchdog('meteologic', 'Updated forecast for provider: %name', array('%name' => $provider['name']), WATCHDOG_INFO);
  return TRUE;
}